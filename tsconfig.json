{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "outDir": "./dist",
        "rootDirs": ["./src", "/tests"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "sourceMap": true
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ],
    "exclude": [
      "src/gas/**/*",
    ]
}
