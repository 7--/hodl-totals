{
    "compilerOptions": {
        "target": "es2019",
        "outDir": "./dist",
        "rootDirs": ["./src", "/tests"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "sourceMap": true
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ]
}
