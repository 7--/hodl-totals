{
  "name": "hodl-totals",
  "version": "1.0.0",
  "description": "Collection of various cryptocurrency tracking tools and scripts for Google Sheets.",
  "main": "index.js",
  "scripts": {
    "compile": "tsc && for file in $(find dist -name '*.js' -o -name '*.js.map'); do NEWFILENAME=`echo \"$file\" | sed 's/.js$/.mjs/g; s/.js.map$/.mjs.map/g'`; mv \"$file\" $NEWFILENAME; sed -i 's/.js/.mjs/g' $NEWFILENAME; done",
    "compile-watch": "tsc-watch --onsuccess \"node dist/index.js\"",
    "lint": "eslint -c .eslintrc.js .",
    "test:e2e": "npm run deploy && clasp open --webapp --deploymentId AKfycbwB39XB368iOkeCDgE9L8RFgbfu73V5X0-C5PiH2JTH",
    "test:debug": "node --experimental-specifier-resolution=node --inspect node_modules/.bin/jest --runInBand",
    "test:unit": "jest",
    "test:unit-watch": "jest --watchAll",
    "test": "npm run test:unit && npm run test:e2e",
    "deploy": "clasp push",
    "build": "npm run lint && npm run compile",
    "start": "npm run build && node --experimental-specifier-resolution=node dist/index.mjs",
    "debug": "npm run compile && node --experimental-specifier-resolution=node --inspect dist/index.mjs",
    "postinstall": "replace-in-file \"declare var console\" \"//declare var console\" node_modules/@types/google-apps-script/google-apps-script.base.d.ts"
  },
  "keywords": [
    "crypto",
    "google-sheets",
    "tax",
    "cryptotax",
    "cryptocurrency",
    "cryptocurrencies",
    "taxes",
    "gains",
    "cost-basis",
    "hodl-totals"
  ],
  "author": "dogracer <dogracer@tutanota.com>, Daring Crypto Ventures LLC",
  "homepage": "https://github.com/dogracer/hodl-totals#readme",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.3.1",
    "@ni/eslint-config": "^1.0.0-alpha.15",
    "@types/google-apps-script": "^1.0.32",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^26.6.3",
    "replace-in-file": "^6.2.0",
    "ts-jest": "^26.5.6",
    "tsc-watch": "^2.1.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@jest/globals": "^26.6.2",
    "inquirer": "^8.0.0"
  }
}
